generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String    @id @default(cuid())
  refId      String    @unique
  name       String
  email      String    @unique
  department String?
  position   String?
  image      String
  role       Role      @default(EMPLOYEE)
  payrolls   Payroll[]
}

model Payroll {
  id        String   @id @default(cuid())
  amount    Int
  currency  String
  reason    String?
  status    String   @default("pending")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user   User   @relation(fields: [userId], references: [id])
  userId String
}

enum Role {
  ADMIN
  EMPLOYEE
}